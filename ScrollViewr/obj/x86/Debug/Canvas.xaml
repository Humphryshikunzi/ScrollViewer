<Page
    x:Class="ScrollViewr.Canvas"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ScrollViewr"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Canvas>
        
        <Line X1="5" X2="105" Y1="5" Y2="5" Fill="Black" Stroke="Black" StrokeEndLineCap="Round" 
             StrokeStartLineCap="Round" StrokeThickness="5"></Line>
        <Line X1="5" X2="55" Y1="5" Y2="105" Fill="Black" Stroke="Black" StrokeEndLineCap="Round" 
              StrokeStartLineCap="Round" StrokeThickness="5"></Line>
        <Line X1="105" X2="55" Y1="5" Y2="105" Fill="Black" Stroke="Black" StrokeEndLineCap="Round" 
              StrokeStartLineCap="Round" StrokeThickness="5"></Line>
        <Polyline
            Fill="Red" Stroke="Black" StrokeThickness="5" StrokeEndLineCap="Round"  StrokeStartLineCap="Round"
            Canvas.Left="20" Canvas.Top="150"
            Points="50,25 0,100 100,100 50,25"></Polyline>
        <TextBlock
            Canvas.Top="0" Canvas.Left="150" FontSize="24">Examples of Shapes</TextBlock>
        <Rectangle x:ConnectionId='2' Name="MyRectangle" Canvas.Top="20" Canvas.Left="120" Width="100" Height="50" Fill="Yellow"
                                                
                  Canvas.ZIndex="5" Stroke="Black" StrokeThickness="5"></Rectangle>
        <Ellipse x:ConnectionId='3' Name="MyEllipse" Canvas.Top="20" Canvas.Left="120" Height="50" Width="80" Stroke="Black" Fill="Pink"
                                            StrokeThickness="5" Canvas.ZIndex="10"></Ellipse>
        

    </Canvas>
</Page>

